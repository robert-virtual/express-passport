{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],

    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",

    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@mongodao/*": ["./dao/models/mongo/*"],
      "@entities/*": ["./dao/models/entities/*"],
      "@models/*": ["./dao/models/*"],
      "@config/*": ["./config/*"]
    }
  }
}
